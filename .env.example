# OpsIntel360 Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_PATH=database/opsintel.db

# API Configuration (if using FastAPI endpoints)
API_HOST=0.0.0.0
API_PORT=8000

# Data Generation
DATA_START_DATE=2023-01-01
DATA_PERIODS=24

# Forecasting
FORECAST_PERIODS=6
FORECAST_YEARLY_SEASONALITY=true

# Anomaly Detection
ANOMALY_CONTAMINATION=0.1
ANOMALY_Z_SCORE_THRESHOLD=3

# Dashboard
DASHBOARD_TITLE="OpsIntel360 - Business Operations Dashboard"
DASHBOARD_LAYOUT=wide

# Optional: Slack Webhook for Alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
